= simple_form_for @song, :html => {:class => 'form-horizontal', :multipart => true} do |f|

  .well
    = f.input :name
    = f.input :artist_id, collection: Artist.all, selected: @song.artist, prompt: t('helpers.words.choose')
    = f.input :album
    = f.input :duration
    = f.association :playlists, collection: playlists
    = f.input :image
    = f.input :file
    = f.input :user_id, as: :hidden, input_html: { value: current_user.id }

  .form_actions
    = f.button :submit, :class => 'btn btn-default'
    = link_to t('helpers.submit.cancel'), :back, :class => 'btn btn-default'

