= simple_form_for @playlist, :html => {:class => 'form-horizontal'} do |f|

  .well
    = f.input :name
    = f.association :kinds, collection: kinds, as: :with_link, input_html: {multiple: 'multiple'}
    = f.association :types, collection: types, as: :with_link, input_html: {multiple: 'multiple'}
    = f.input :image
    = f.input :description
    = f.input :user_id, as: :hidden, input_html: { value: current_user.id }

  .form_actions
    = f.button :submit, :class => 'btn btn-default'
    = link_to t('helpers.submit.cancel'), :back, :class => 'btn btn-default'

