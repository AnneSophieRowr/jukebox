%li.media.handle{id: "song_#{song.id}"}
  = link_to '#', class: 'pull-left' do
    = image_tag song.image_url(:thumb)
  .media-body
    %h4.media-heading= song.name
    = song.artist.name unless song.artist.nil?
    %br
    = song.decorate.albums
  .media-actions
    = link_to edit_song_path(song), class: 'btn btn-default', title: t('song.edit') do
      %span.fa.fa-edit
    = link_to albums_song_path(albums_song), method: :delete, remote: true, class: 'btn btn-default delete_song', title: t('playlist.new') do
      %span.fa.fa-trash-o
