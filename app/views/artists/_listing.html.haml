- if artists.empty?
  = t('artist.empty')

- else
  .row.paginate
    .col-md-8
      = paginate artists
    .col-md-4
      %p.pull-right= [artists.total_count.to_s, t('model.artists').downcase].join(" ")

  %table.table.table-striped
    %thead
      %tr
        %th
        %th= t('artist.name')
        %th= t('artist.description')
        %th
    %tbody
      - artists.each do |artist|
        %tr
          %td.img= image_tag artist.image_url(:thumb)
          %td= artist.name
          %td= artist.description
          %td
            = link_to artist, class: 'btn btn-default btn-sm', title: t('artist.show') do
              %span.fa.fa-eye
            = link_to edit_artist_path(artist), :class => 'btn btn-default btn-sm', :title => t('artist.edit') do
              %span.fa.fa-edit
            = link_to artist_path(artist), :class => 'btn btn-default btn-sm', :title => t('artist.destroy'), method: :delete, data: { confirm: t('artist.confirm_destroy') } do
              %span.fa.fa-times


