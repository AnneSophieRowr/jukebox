= simple_form_for @kind, :html => {:class => 'form-horizontal'} do |f|

  .well
    = f.input :name
    = f.input :visible
    = f.input :image
    = f.input :description

  .form_actions
    = f.button :submit, :class => 'btn btn-default'
    = link_to t('helpers.submit.cancel'), :back, :class => 'btn btn-default'

